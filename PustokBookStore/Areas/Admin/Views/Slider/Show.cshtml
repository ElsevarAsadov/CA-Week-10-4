@model List<BookSliderModel>

<div class="container-fluid p-3">

    <h1 class="display-1">Show Sliders</h1>
    <a asp-action="Create" asp-controller="Slider" class="btn btn-success mt-8 mb-4">Create New</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">AUTHOR NAME</th>
                <th scope="col">BOOK NAME</th>
                <th scope="col">IMAGE NAME</th>
                <th scope="col">BUTTON TEXT</th>
                <th scope="col">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach(BookSliderModel bookSlider in Model)
            {
                <tr>
                    <td>@bookSlider.Id</td>
                    <td>@bookSlider.BookName</td>
                    <td>@bookSlider.AuthorName</td>
                    <td>@bookSlider.ImageName</td>
                    <td>@bookSlider.ButtonText</td>
                    <td class="row">
                        <form asp-action="Delete" asp-controller="Slider" asp-route-id="@bookSlider.Id" method="POST" class="mr-4">

                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>

                        <a asp-action="Update" asp-controller="Slider" asp-route-id="@bookSlider.Id" class="btn btn-warning">
                           UPDATE
                        </a>
                    </td>
                </tr>
            }
            
            
        </tbody>
    </table>

</div>